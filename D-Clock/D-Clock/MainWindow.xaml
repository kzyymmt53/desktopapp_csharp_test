<Window x:Class="D_Clock.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:D_Clock"
        mc:Ignorable="d"
        Title="時計" Height="100" Width="200" WindowStyle="None" ResizeMode="CanResizeWithGrip" ShowInTaskbar="False" Topmost="True" Background="#BF000000" AllowsTransparency="True" MouseLeftButtonDown="Window_MouseLeftButtonDown">
    <Window.ContextMenu>
        <ContextMenu>
            <MenuItem Header="閉じる(_C)" Click="MenuItem_Click" />
        </ContextMenu>
    </Window.ContextMenu>
    <Viewbox>
        <TextBlock x:Name="TimeLabel" Text="00:00:00" Foreground="Red"/>
    </Viewbox>
</Window>
